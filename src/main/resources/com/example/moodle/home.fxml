<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.moodle.controller.HomeController">

    <!-- ================= NAVBAR ================= -->
    <top>
        <HBox spacing="20"
              alignment="CENTER_LEFT"
              style="-fx-padding: 15;">

            <Label text="MOODLE 2.0"
                   styleClass="title-label"/>

            <Button text="âŒ‚ Home" styleClass="nav-btn" onAction="#goHome"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Your Campus -->
            <Button text="ðŸ”² New Window" onAction="#openNewWindow"
                    style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 11px;"/>

            <Button fx:id="campusButton"
                    text="My Campus"
                    onAction="#goToCampus"/>

            <!-- My Profile Button (visible when logged in) -->
            <Button fx:id="profileButton"
                    text="My Profile"
                    onAction="#goToProfile"
                    visible="false"/>

            <!-- Logout Button (visible when logged in) -->
            <Button fx:id="logoutButton"
                    text="Logout"
                    onAction="#logout"
                    visible="false"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>

            <!-- Sign Up Button -->
            <Button fx:id="signupButton"
                    text="Sign Up"
                    onAction="#goToSignup"/>

            <!-- Login Button -->
            <Button fx:id="loginButton"
                    text="Login"
                    onAction="#goToLogin"/>

        </HBox>
    </top>

    <!-- ================= CENTER ================= -->
   <center>

    <ScrollPane fitToWidth="true">

        <VBox spacing="60"
              alignment="TOP_CENTER">

