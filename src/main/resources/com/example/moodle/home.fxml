<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.SeparatorMenuItem?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.moodle.controller.HomeController">

    <!-- ================= NAVBAR ================= -->
    <top>
        <HBox spacing="20"
              alignment="CENTER_LEFT"
              style="-fx-padding: 15;">

            <Label text="MOODLE 2.0"
                   styleClass="title-label"/>

            <Button text="⌂ Home" styleClass="nav-btn" onAction="#goHome"/>
            <Button text="My Campus" styleClass="nav-btn" onAction="#goToCampus"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Your Campus -->
            <Button fx:id="campusButton"
                    text="Your Campus"
                    visible="false"
                    onAction="#goToCampus"/>

            <!-- Profile Dropdown -->
            <MenuButton fx:id="profileMenu"
                        text="My Profile"
                        visible="false">

                <MenuItem fx:id="nameItem"/>
                <MenuItem fx:id="universityItem"/>
                <MenuItem fx:id="emailItem"/>
                <SeparatorMenuItem/>
                <MenuItem text="Logout" onAction="#logout"/>

            </MenuButton>

            <!-- Sign Up Button -->
<Button fx:id="signupButton"
        text="Sign Up"
        onAction="#goToSignup"/>

<!-- Login Button -->
<Button fx:id="loginButton"
        text="Login"
        onAction="#goToLogin"/>

        </HBox>
    </top>

    <!-- ================= CENTER ================= -->
   <center>

    <ScrollPane fitToWidth="true">

        <VBox spacing="60"
              alignment="TOP_CENTER">

            <padding>
                <Insets top="60" bottom="60"/>
            </padding>

            <!-- HERO -->
            <VBox spacing="15" alignment="CENTER">
                <Label text="Integrated University Platform"
                       styleClass="title-label"/>

                <Label text="Connecting Engineering, Medical, Agricultural and All Universities in One Smart System"
                       wrapText="true"
                       maxWidth="700"/>
            </VBox>

            <!-- ABOUT -->
            <VBox spacing="15" maxWidth="800">
                <Label text="About"
                       styleClass="section-title"/>
                <Label wrapText="true"
                       text="Moodle 2.0 is a unified digital platform designed to manage and simulate university life across all institutions."/>
            </VBox>

            <!-- LATEST NEWS -->
            <VBox spacing="15" maxWidth="800">
                <Label text="Latest News"
                       styleClass="section-title"/>
                <Label text="• BUET wins International Robotics Competition"/>
                <Label text="• Medical Research Breakthrough"/>
                <Label text="• Agricultural Fair 2026 Announced"/>
            </VBox>

            <!-- UPCOMING EVENTS -->
            <VBox spacing="15" maxWidth="800">
                <Label text="Upcoming Events"
                       styleClass="section-title"/>
                <Label text="• Inter University Hackathon"/>
                <Label text="• National Conference"/>
                <Label text="• Debate Championship"/>
            </VBox>

        </VBox>

    </ScrollPane>

</center>

    <!-- ================= BOTTOM NAV ================= -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 15;">
            <Button text="← Back" styleClass="nav-btn" onAction="#goBack"/>
        </HBox>
    </bottom>

</BorderPane>