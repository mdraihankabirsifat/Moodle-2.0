<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.moodle.controller.CampusAccessController">

    <!-- ================= TOP NAV ================= -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15;">
            <Button text="⌂ Home" styleClass="nav-btn" onAction="#goHome"/>
            <Button text="My Campus" styleClass="nav-btn" onAction="#goToCampus"/>
        </HBox>
    </top>

    <center>
        <StackPane>

            <VBox spacing="15"
                  alignment="CENTER"
                  maxWidth="420"
                  styleClass="card">

                <Label text="Campus Access"
                       styleClass="title-label"/>

                <fx:define>
                    <ToggleGroup fx:id="roleGroup"/>
                </fx:define>

                <HBox spacing="25" alignment="CENTER" style="-fx-padding: 10 0 10 0;">
                    <RadioButton fx:id="studentRadio" text="Student" toggleGroup="$roleGroup"/>
                    <RadioButton fx:id="teacherRadio" text="Teacher" toggleGroup="$roleGroup"/>
                    <RadioButton fx:id="authorityRadio" text="Authority" toggleGroup="$roleGroup"/>
                </HBox>

                <!-- Student fields -->
                <VBox fx:id="studentFields" spacing="10">
                    <TextField fx:id="campusIdField" promptText="Student ID"/>
                    <PasswordField fx:id="campusPassField" promptText="Password"/>
                </VBox>

                <!-- Teacher / Authority field -->
                <VBox fx:id="staffFields" spacing="10" visible="false" managed="false">
                    <PasswordField fx:id="staffPassField" promptText="Access Password"/>
                    <Label fx:id="hintLabel" text="" style="-fx-text-fill: #888; -fx-font-size: 11px;"/>
                </VBox>

                <Button text="Enter Campus"
                        onAction="#verifyCampus"/>

                <Label fx:id="messageLabel"/>

            </VBox>

        </StackPane>
    </center>

    <!-- ================= BOTTOM NAV ================= -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 15;">
            <Button text="← Back" styleClass="nav-btn" onAction="#goBack"/>
        </HBox>
    </bottom>

</BorderPane>