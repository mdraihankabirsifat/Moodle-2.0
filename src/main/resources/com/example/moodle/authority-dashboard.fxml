<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.moodle.controller.AuthorityDashboardController">

    <!-- TOP -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15;">
            <Button text="âŒ‚ Home" styleClass="nav-btn" onAction="#goHome"/>
            <Button text="My Campus" styleClass="nav-btn" onAction="#goToCampus"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Authority Dashboard"
                   styleClass="title-label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="ðŸ”² New Window" onAction="#openNewWindow"
                    style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 11px;"/>
            <Button text="Sign Out" onAction="#signOutCampus"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                    style="-fx-background-color: transparent;">
            <VBox spacing="10"
                  prefWidth="220"
                  style="-fx-padding: 20;">

                <Label text="DATABASE" style="-fx-text-fill: rgba(255,255,255,0.5); -fx-font-size: 11px; -fx-font-weight: bold;"/>

                <Button text="Student Database"
                        onAction="#showStudentDatabase"
                        maxWidth="Infinity"/>

                <Button text="Edit Student"
                        onAction="#showEditStudent"
                        maxWidth="Infinity"/>

                <Label text="MANAGEMENT" style="-fx-text-fill: rgba(255,255,255,0.5); -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>

                <Button text="Manage Notices"
                        onAction="#showManageNotices"
                        maxWidth="Infinity"/>

                <Button text="Payment Overview"
                        onAction="#showPaymentOverview"
                        maxWidth="Infinity"/>

                <Label text="SYSTEM" style="-fx-text-fill: rgba(255,255,255,0.5); -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>

                <Button text="System Overview"
                        onAction="#showSystemOverview"
                        maxWidth="Infinity"/>

            </VBox>
        </ScrollPane>
    </left>

    <!-- DYNAMIC CONTENT -->
    <center>
        <StackPane fx:id="contentArea"
                   style="-fx-padding: 30;"/>
    </center>

    <!-- BOTTOM NAV -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 15;">
            <Button text="â† Back" styleClass="nav-btn" onAction="#goBack"/>
        </HBox>
    </bottom>

</BorderPane>
